<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ConstraintSet android:id="@+id/state_start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/state_end1">
        <Constraint
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/logo_default_size"
            android:layout_height="@dimen/logo_default_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </ConstraintSet>

    <Transition
        android:id="@+id/tr1"
        app:constraintSetEnd="@id/state_end1"
        app:constraintSetStart="@id/state_start"
        app:duration="3000"
        app:motionInterpolator="linear">
        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@id/iv_logo" />
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@id/iv_logo">
                <CustomAttribute
                    app:attributeName="layout_width"
                    app:customDimension="100dp" />
                <CustomAttribute
                    app:attributeName="layout_height"
                    app:customDimension="100dp" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>
</MotionScene>

